<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/requestListOrderNumber"
        android:textStyle="bold"
        android:paddingRight="4dp"
        android:textSize="15sp"
        android:paddingLeft="4dp"
        android:text="Condom Request #"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/requestListDateRequested"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:textSize="15sp"
        android:layout_below="@+id/requestListOrderNumber"
        android:text="Date Requested"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/requestListDestination"
        android:text="Destination"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:textSize="15sp"
        android:layout_below="@+id/requestListDateRequested"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <CheckBox
        android:id="@+id/requestListAccepted"
        android:text="Accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/requestListDestination"
        android:enabled="false"
        android:focusable="false"
        />

    <CheckBox
        android:id="@+id/requestListDelivered"
        android:text="Delivered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:enabled="false"
        android:focusable="false"
        android:layout_alignTop="@+id/requestListAccepted"
        android:layout_toRightOf="@+id/requestListAccepted"
        android:layout_toEndOf="@+id/requestListAccepted"/>
    </RelativeLayout>
</RelativeLayout>