<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="CONDOM GUIDE">
        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/howto12"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/howto34"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/howto56"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="HEALTH CENTER"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="After-hours care : Please call (610)-326-8548 to talk to a Worth nurse or nurse practitioner."
            android:padding="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="If you have an emergency and need 911, please call Public Safety at (610)-328-8333."/>
        <TextView
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:text="Non-urgent questions : please feel free to email Worth at health@swarthmore.edu"/>
    </LinearLayout>
</ScrollView>